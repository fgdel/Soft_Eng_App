{% extends 'admin/_adminBase.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Placements{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

    <div class="container">
        <div class="form">
            <h1>Placements</h1>

            <table>
                <tr>
                    <th> Name </th>
                    <th> Role </th>
                    <th> Company </th>
                    <th> Website </th>
                    <th> Deadline </th>
                    <th> Description </th>
                    <th> &nbsp; </th>
                    <th> <a href="/?admin/placement/create" title="New Placement" class="btn btn-new">New</a> </th>
                </tr>
                {% for item in placement_list %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.role }}</td>
                        <td>{{ item.company }}</td>
                        <td>{{ item.company_url }}</td>
                        <td>{{ item.deadline }}</td>
                        <td>{{ item.description }}</td>
                        <td><a href="/?admin/placement/update/{{ item.id }}" title="Update" class="btn btn-update">Update</a></td>
                        <td><a href="/?admin/placement/delete/{{ item.id }}" title="Delete" class="btn btn-delete">Delete</a></td>
                    </tr>
                {% endfor %}
            </table>


        </div>
    </div>

{% endblock %}