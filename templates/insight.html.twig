{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Employers{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

        <div class="container">
            <div class="form">
                <h1>Placements</h1>

                <table>
                    <tr>
                        <th> Placements </th>
                        <th> &nbsp; </th>
                        <th> <a href="/?admin/product/create" title="New Product" class="btn btn-new">New</a> </th>
                    </tr>
                    {% for item in product_list %}
                        <tr>
                            <td>{{ item.title }}{% if item.platform %} ({{ item.platform }}){% endif %}</td>
                            <td><a href="/?admin/product/update/{{ item.id }}" title="Update" class="btn btn-update">Update</a></td>
                            <td><a href="/?admin/product/delete/{{ item.id }}" title="Delete" class="btn btn-delete">Delete</a></td>
                        </tr>
                    {% endfor %}
                </table>

            </div>
        </div>


{% endblock %}
