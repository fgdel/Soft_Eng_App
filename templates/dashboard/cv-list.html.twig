{% extends '../_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}CVs{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

  <div class="container">
    <div class="form">
      <h1>CVs</h1>

      <table>
        <tr>
          <th> CV </th>
          <th> &nbsp; </th>
          <th> <a href="/?cv/create" title="New CV" class="btn btn-new">New</a> </th>
        </tr>
        {% for item in cv_list %}
          <tr>
            <td><img src="{{ item.photo }}" title="{{ item.name }}" width="120" /></td>
            <td><a href="/?cv/update/{{ item.id }}" title="Update" class="btn btn-update">Update</a></td>
            <td><a href="/?cv/delete/{{ item.id }}" title="Delete" class="btn btn-delete">Delete</a></td>
          </tr>
        {% endfor %}
      </table>

    </div>
  </div>

{% endblock %}